# ============================================================================
# MinIO Production Configuration Example
# ============================================================================

SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8080

# MinIO Configuration
STORAGE_PROVIDER=minio
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT_URL=http://minio.yourcompany.com:9000
STORAGE_ACCESS_KEY=your-minio-access-key
STORAGE_SECRET_KEY=your-minio-secret-key
STORAGE_PATH_STYLE_ACCESS=true

# Multi-Tenancy
STORAGE_BUCKET_STRATEGY=SHARED_WITH_PREFIX
STORAGE_SHARED_BUCKET=production-storage
STORAGE_AUTO_CREATE_BUCKETS=true
STORAGE_DUPLICATE_FILE_STRATEGY=UUID_SUFFIX

# Security
STORAGE_MULTI_TENANCY_ENABLED=true
STORAGE_REQUIRE_API_KEY=true
STORAGE_ENFORCE_QUOTA=true
STORAGE_MAX_FILE_SIZE_MB=25

# JVM
JAVA_OPTS=-Xmx1g -Xms512m
